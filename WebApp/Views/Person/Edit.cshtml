@model WebApp.Models.Person.CreatePersonViewModel

@{
    ViewData["Title"] = "Edit";
}
<h4>
    People
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="UrlPhoto" name="UrlPhoto" class="form-control" />
                <img src="@Html.DisplayFor(model => model.UrlPhoto)" style="width:40px;height:40px;" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" type="date" class="form-control" required />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CountryId" class="control-label">Country</label>
                <select name="CountryId" asp-for="CountryId" class="form-control">
                    <option value="" selected disabled>---</option>
                    @foreach (var country in @ViewBag.Countries)
                    {
                        <option value="@country.Id">@country.Name </option>
                    }
                </select>
                <span validation-for="Country.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="StateId" class="control-label">State</label>
                <select name="StateId" asp-for="StateId" class="form-control">
                    <option value="" selected disabled>---</option>
                    @foreach (var state in @ViewBag.States)
                    {
                        <option value="@state.Id">@state.Name </option>
                    }
                </select>
                <span validation-for="Country.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<Domain.Person>

@{
    ViewData["Title"] = "Index";
}
<h4>People</h4>
<p>
   <a type="button" asp-action="Create" value="Create" class="btn btn-primary">Create</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Photo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthday)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.UrlPhoto)" style="width:40px;height:40px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.Birthday, "{0:dd/MM/yyyy}")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                    @Html.ActionLink("Details", "Details", new { item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { item.Id })|
                    @Html.ActionLink("Friends", "Friends", new { item.Id })
                </td>
            </tr>
            }
        </tbody>
    </table>
